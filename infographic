    <script>

        function wrapLabels(labels) {

            return labels.map(label => {

                if (label.length <= 16) return label;

                const words = label.split(' ');

                const lines = [];

                let currentLine = '';



                words.forEach(word => {

                    let newLine = (currentLine + ' ' + word).trim();

                    if (word.length > 16) {

                        if (currentLine) lines.push(currentLine);

                        lines.push(word);

                        currentLine = '';

                    } else if (newLine.length <= 16) {

                        currentLine = newLine;

                    } else {

                        if (currentLine) lines.push(currentLine);

                        currentLine = word;

                    }

                });

                if (currentLine) lines.push(currentLine);

                return lines;

            });

        }



        function getMandatoryTooltipConfig() {

            return {

                tooltip: {

                    callbacks: {

                        title: function(tooltipItems) {

                            const item = tooltipItems[0];

                            let label = item.chart.data.labels[item.dataIndex];

                            if (Array.isArray(label)) {

                              return label.join(' ');

                            } else {

                              return label;

                            }

                        }

                    }

                }

            };

        }



        document.addEventListener('DOMContentLoaded', function() {



            const weeks = ['Wk 1 (De-Load)', 'Wk 2 (Activate)', 'Wk 3 (Low Load)', 'Wk 4 (Integrate)'];

            const progressionData = {

                labels: wrapLabels(weeks),

                datasets: [

                    {

                        label: 'Mobility / De-Load',

                        data: [80, 40, 10, 10], 

                        backgroundColor: '#3E9B95', // New Dark Teal (Relaxed)

                        stack: 'Stack 0',

                    }, 

                    {

                        label: 'Activation / Core',

                        data: [20, 60, 40, 30],

                        backgroundColor: '#69624b', // Dark Olive (Mid-level focus)

                        stack: 'Stack 0',

                    }, 

                    {

                        label: 'Functional Strength Load',

                        data: [0, 0, 50, 60],

                        backgroundColor: '#ffc233', // New Orange/Yellow (High load)

                        stack: 'Stack 0',

                    }

                ]

            };



            const mandatoryPlugins = getMandatoryTooltipConfig();

            

            const progressionBarConfig = {

                type: 'bar',

                data: progressionData,

                options: {

                    responsive: true,

                    maintainAspectRatio: false,

                    scales: {

                        x: {

                            stacked: true,

                            grid: { display: false }

                        },

                        y: {

                            stacked: true,

                            max: 100,

                            title: { display: true, text: 'Relative Effort (%)', color: '#69624b' }

                        }

                    },

                    plugins: {

                        legend: { position: 'top', labels: { color: '#69624b' } },

                        title: { display: false },

                        ...mandatoryPlugins

                    }

                }

            };

            new Chart(document.getElementById('progressionBarChart'), progressionBarConfig);

        });

    </script>

